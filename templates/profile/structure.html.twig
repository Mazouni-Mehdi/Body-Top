{% extends 'base.html.twig' %}

{% block title %}Liste de la/des structure(s) de la franchise de{% endblock %}
{% block body %}
	<h1>Voici vos structures</h1>

	<div class="container">
		{% for structure in structure %}
			<div class="card">
				<h5>{{ structure.city }}</h5>
				<div class="form-label">Adresse:  
					<span class="form-label">{{ structure.address }}</span>
				</div>
				<div class="form-label">Code postal:  
					<span class="form-label">{{ structure.zipcode }}</span>
				</div>
				<div class="form-label">Ville:  
					<span class="form-label">{{ structure.city }}</span>
				</div>
				<a href="{{ path('app_profile_list_module', {'id': structure.id}) }}">Voir les modules</a>
			</div>	
		{% endfor %}
	</div>

{% endblock %}